      </div>
      </div>
          <div class="container">
            <div class="row">
              <div class="col-sm-4">
                <div class="p-3 mb-2 bg-warning text-dark">
                <h3>Enter New Menu Item</a></h3>
                <form action="/menuPage" method="POST">
                  <div class="form-group">
                  <input class="form-control" type="text" placeholder="Item Name" id="addmenuitemName" name="addmenuitemName">
                  <input class="form-control" type="number" min="0" step=".01" data-bind="value:replyNumber" placeholder="Price" id="addmenuPrice" name="addmenuPrice">
                  </div>
                  <button type="submit" class="btn btn-primary" onclick="location.href='/enterItem'">Submit</button>
                </form>
                </div>     
              </div>
              <div class="col-sm-4">
                <div class="p-3 mb-2 bg-warning text-dark">
                <h3>Update Menu</a></h3>
                <form action="/menuPage" method="POST">  
                  <div class="form group">
                    <input class="form-control" type="number" min="0" data-bind="value:replyNumber" placeholder="Item ID" id="menuid" name="menuid">
                    <input class="form-control" type="text" placeholder="Item Name" id="updatemenuitemName" name="updatemenuitemName">
                    <input class="form-control" type="number" step=".01" min="0" data-bind="value:replyNumber" placeholder="Price" id="updatemenuPrice" name="updatemenuPrice">
                  </div>
                  <button type="submit" class="btn btn-primary" onclick="location.href='/updateItem'">Submit</button>
                </form>
                </div>
              </div>
              <div class="col-sm-4">
                <div class="p-3 mb-2 bg-warning text-dark">
                <h3>Delete Menu Item</a></h3>
                <form action="/menuPage" method="POST">
                  <div class="form group">
                    <input class="form-control" type="number" min="0" data-bind="value:replyNumber" placeholder="Item ID" id="deletemenuitem" name="deletemenuitem">
                  </div>
                  <button type="submit" class="btn btn-primary" onclick="location.href='/deleteItem'">Submit</button>
                </form>
                
                </div>
              </div>
                 <!-- Define a table element to display the menu -->
    <table class="table table-dark">
      <!-- Define the table header -->
      <thead>
        <tr>
          <th>Item ID</th>
          <th>Item Name</th>
          <th>Item Price</th>
        </tr>
      </thead>
      
      <!-- Define the table body -->
      <tbody>
        <!-- Loop over each item in the menu array -->
        <%menu.forEach((item, index) => { %>
          <!-- Define a table row for the current item -->
          <tr style="background-color: <%= index % 2 === 0 ? '#ffffff' : '#f2f2f2' %>;">
            <!-- Display the item ID in a table cell -->
            <td><%= item.item_id %></td>
            <!-- Display the item name in a table cell -->
            <td><%= item.item_name %></td>
            <!-- Display the item price in a table cell -->
            <td><%= item.item_price %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
          </div>
      </div>
    </body>