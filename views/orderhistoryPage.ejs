          <div class="container">
            <div class="row">
                  <!-- Define a table element to display the menu -->
    <table class="table table-dark">
      <!-- Define the table header -->
      <thead>
        <tr>
          <th>Order ID </th>
          <th>Customer Name </th>
          <th>Date </th>
          <th>Amount Paid </th>
          <th>Items </th>
          <th>Payment Type </th>
        </tr>
      </thead>
      
      <!-- Define the table body -->
      <tbody>
        <!-- Loop over each item in the menu array -->
        <%orderHistory.forEach((item, index) => { %>
          <!-- Define a table row for the current item -->
          <tr style="background-color: <%= index % 2 === 0 ? '#00000' : '#f2f2f2' %>;">
            <!-- Display the item ID in a table cell -->
            <td><%= item.order_id %></td>
            <!-- Display the item name in a table cell -->
            <td><%= item.customer_name %></td>
            <!-- Display the item price in a table cell -->
            <td><%= item.date %></td>
            <!-- Define a button for the current item -->
            <td><%= item.amount_paid %></td>
            <!-- Display the item name in a table cell -->
            <td><%= item.items %></td>
            <!-- Display the item price in a table cell -->
            <td><%= item.payment_type %></td>
            <!-- Define a button for the current item -->
          </tr>
          <% }); %>
        </tbody>
      </table>
              </div>
          </div>
      </div>
    </body>